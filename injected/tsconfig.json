{
	"compilerOptions": {
		"target": "ES2020",
		"strict": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"outDir": "types",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"include": ["src/**/*"]
}